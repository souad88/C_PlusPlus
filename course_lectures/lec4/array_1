#include<iostream>
#include<array>
#include<iomanip>
using namespace std;
int main()
{
        array<int,5>num;
        cout<<"Enter Numbers 0->4"<<endl;
        for(int i=0; i<num.size();i++)
        {
                cin>>num[i];

        }
        cout<<"array elements"<<endl;
        for(int i=0; i<num.size(); i++)
        {
                cout<<setw(7)<<i<<setw(7)<<num[i]<<endl;//setw give blank spaces 
        }
        return 0;
}

    
